                <children>
                    <Button fx:id="usePointDiscount" layoutX="238.0" layoutY="210.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="222.0" styleClass="discountBtn" text="Dùng điểm tích luỹ">
