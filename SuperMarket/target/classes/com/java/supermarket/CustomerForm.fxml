<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="144.0" prefWidth="292.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.java.supermarket.controller.CustomerFormController">
    <children>
        <Label style="-fx-font-size: 18px;" text="Thông tin khách hàng" />
        <HBox spacing="10">
            <children>
                <Label text="Tên khách hàng:" />
                <TextField fx:id="nameField" />
            </children>
        </HBox>
        <HBox spacing="10">
            <children>
                <Label text="Số điện thoại:" />
                <TextField fx:id="phoneField" onKeyReleased="#initialize"/>
            </children>
        </HBox>
        <HBox spacing="10">
            <children>
                <Label text="Điểm tích lũy:" />
                <TextField fx:id="pointsField" />
            </children>
        </HBox>
        <Button fx:id="saveCustomerForm" onAction="#handleSave" text="Lưu" />
    </children>
</VBox>
